<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image_child_item"
        android:background="@mipmap/def_loading"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/text_child_item_name"
        android:layout_alignTop="@+id/image_child_item"
        android:layout_toRightOf="@+id/image_child_item"
        android:layout_toEndOf="@+id/image_child_item" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text_child_item_company"
        android:id="@+id/text_child_item_company"
        android:layout_alignBottom="@+id/image_child_item"
        android:layout_toRightOf="@+id/image_child_item"
        android:layout_toEndOf="@+id/image_child_item" />
    <ImageView
        android:id="@+id/image_child_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/g_biao"
        android:layout_toRightOf="@id/image_child_item"/>
    <TextView
        android:id="@+id/text_child_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="hahahha"
        android:textColor="@color/colorAccent"
        android:layout_toRightOf="@id/image_child_item_time"/>
    <TextView
        android:id="@+id/text_child_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="200"
        android:layout_toRightOf="@id/text_child_item_date"
        android:layout_marginLeft="30dp"/>
    <Button
        android:id="@+id/btn_child_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@color/colorAccent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>