<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/right_img_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:src="@mipmap/def_loading" />

    <TextView
        android:id="@+id/right_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_toRightOf="@+id/right_img_game"
        android:layout_alignParentTop="true"
       />

    <TextView
        android:id="@+id/right_tv_operators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_toRightOf="@+id/right_img_game"
        android:layout_alignBottom="@+id/right_button"
         />
    <TextView
        android:id="@+id/right_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/g_biao"
        android:text="New Text"
        android:layout_toRightOf="@+id/right_img_game"
        android:layout_alignBottom="@+id/right_img_game"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看"
        android:background="@color/colorAccent"
        android:layout_below="@+id/right_tv_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>