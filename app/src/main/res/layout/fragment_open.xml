<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.example.ycg.myapp.fragment.OpenFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/open_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_open"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"></android.support.v4.view.ViewPager>

</LinearLayout>
